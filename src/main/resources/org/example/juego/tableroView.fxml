<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/22.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.juego.controlador.TableroController">

   <HBox prefHeight="600.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

      <!-- Área del tablero -->
      <Pane fx:id="tableroArea" prefHeight="600.0" style="-fx-background-color: #e0e0e0; -fx-border-color: black;" HBox.hgrow="ALWAYS">
         <children>
            <AnchorPane fx:id="Dado" layoutX="507.0" layoutY="396.0" prefHeight="86.0" prefWidth="88.0" />
            <Button fx:id="btnSiguienteTurno" layoutX="507.0" layoutY="500.0" mnemonicParsing="false" onAction="#onSiguienteTurno" text="Siguiente Turno" />
         </children></Pane>

      <!-- Área de jugadores -->
      <VBox fx:id="vboxJugadores" prefHeight="600.0" prefWidth="200.0" spacing="10" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-border-color: black;">
      <Label style="-fx-font-size: 16; -fx-font-weight: bold;" text="Jugadores" />
   </VBox>


   </HBox>
</AnchorPane>
